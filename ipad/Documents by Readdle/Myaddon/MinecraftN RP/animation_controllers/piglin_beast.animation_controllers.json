{
  "format_version": "1.8.0",
  "animation_controllers": {
    "controller.animation.petpig.baby": {
      "states": {
        "baby": {
          "parameters": [ "query.is_baby" ],
          "animations": [
            {
              "baby_transform": [
                {
                  "0.0": 0.0,
                  "1.0": 1.0
                }
              ]
            }
          ]
        }
      }
    },
    "controller.animation.petpig.look_at_target": {
      "states": {
        "default": {
          "animations": [ { "look_at_target": [] } ]
        }
      }
    },
    "controller.animation.petpig.move": {
      "states": {
        "sneaking": {
          "animations": [ { "sneak": [] } ],
          "transitions": [
            { "sprinting": "variable.petpig.sprinting" },
            { "sitting": "variable.petpig.sitting" },
            { "walking": "!variable.petpig.sneaking" },
            { "lie_down": "variable.petpig.lying_down" }
          ]
        },
        "sprinting": {
          "parameters": [ "query.modified_move_speed" ],
          "animations": [ { "sprint": [] } ],
          "transitions": [
            { "sneaking": "variable.petpig.sneaking" },
            { "sitting": "variable.petpig.sitting" },
            { "walking": "!variable.petpig.sitting" },
            { "lie_down": "variable.petpig.lying_down" }
          ]
        },
        "sitting": {
          "parameters": [ "query.modified_move_speed" ],
          "animations": [ { "sit": [] } ],
          "transitions": [
            { "sneaking": "variable.petpig.sneaking" },
            { "sprinting": "variable.petpig.sprinting" },
            { "walking": "!variable.petpig.sitting" },
            { "lie_down": "variable.petpig.lying_down" }
          ]
        },
        "walking": {
          "parameters": [ "query.modified_move_speed" ],
          "animations": [ { "walk": [] } ],
          "transitions": [
            { "sneaking": "variable.petpig.sneaking" },
            { "sprinting": "variable.petpig.sprinting" },
            { "sitting": "variable.petpig.sitting" },
            { "lie_down": "variable.petpig.lying_down" }
          ]
        },
        "lie_down": {
          "parameters": [ "query.modified_move_speed" ],
          "animations": [ { "lie_down": [] } ],
          "transitions": [
            { "sneaking": "variable.petpig.sneaking" },
            { "sprinting": "variable.petpig.sprinting" },
            { "sitting": "variable.petpig.sitting" },
            { "walking": "!variable.petpig.sitting" }
          ]
        }
      }
    }
  }
}